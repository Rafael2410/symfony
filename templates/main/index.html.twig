{% extends 'base.html.twig' %}

{% block title %}Тестовое задание level 1!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Тестовое задание level 1✅</h1>



<div style="display:flex;">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Weight</th
        </tr>
      </thead>
      <tbody>
          <tr>
            <th scope="row">{{person.id}}</th>
            <td>{{person.name}}</td>
            <td>{{person.age}}</td>
            <td>{{person.weight}}</td>
          </tr>
      </tbody>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Cars</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
          {% for car in person.cars('#collection') %}
          <tr>
                <td>{{car.title}}</td>
                <td>{{car.price}}</td>
                  </tr>
          {% endfor %}
      </tbody>
    </table>
</div>

</div>
{% endblock %}
